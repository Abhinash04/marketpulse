{
  "manifest_version": 3,
  "name": "MarketPulse",
  "version": "1.0",
  "description": "Turn web pages into strategy. Instantly scrape and summarize competitor news with AI-powered insights for smarter business decisions.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}